{
  "name": "stardew-valley-companion-app",
  "version": "0.0.0",
  "description": "This web application provides a user a companion app to the Stardew Valley game.",
  "private": false,
  "scripts": {
    "markdown": "markdownlint src/**/*.md .github/**/*.md CHANGELOG.md CODE_OF_CONDUCT.md CONTRIBUTING.md README.md -c .markdownlint.yml",
    "html": "html-linter --config html-linter.json",
    "javascript": "eslint frontend/javascript/*.js frontend/javascript/controllers/*.js frontend/javascript/generators/data/*.js frontend/javascript/utils/*.js start.js sync.js webpack.config.js tailwind.config.js postcss.config.js",
    "css": "stylelint frontend/**/*.scss",
    "build": "bundle exec bridgetown build",
    "serve": "bundle exec bridgetown serve",
    "webpack-build": "webpack --mode production",
    "webpack-dev": "webpack --mode development -w",
    "deploy": "yarn webpack-build && yarn build",
    "sync": "node sync.js",
    "start": "node start.js"
  },
  "homepage": "https://github.com/chiefpansancolt/stardew-valley-companion-app",
  "bugs": {
    "url": "https://github.com/chiefpansancolt/stardew-valley-companion-app/issues",
    "email": "github@chiefpansancolt.live"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chiefpansancolt/stardew-valley-companion-app"
  },
  "author": {
    "name": "Christopher Pezza",
    "email": "github@chiefpansancolt.live"
  },
  "contributors": [
    {
      "name": "Christopher Pezza",
      "email": "github@chiefpansancolt.live",
      "url": "https://chiefpansancolt.live"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "autoprefixer": "^10.1.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "css-loader": "^3.4.2",
    "eslint": "^7.16.0",
    "eslint-config-google": "^0.14.0",
    "file-loader": "^6.0.0",
    "html-linter": "^1.1.1",
    "markdownlint": "^0.22.0",
    "markdownlint-cli": "^0.26.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "postcss": "^8.2.1",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.1.0",
    "sass-loader": "^8.0.2",
    "stimulus": "^2.0.0",
    "style-loader": "^1.1.3",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/typography": "^0.3.1",
    "heroicons": "^0.4.2",
    "tailwindcss": "^2.0.2"
  }
}
