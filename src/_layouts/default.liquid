<!doctype html>
<html lang="en">

<head>
    {% render "main/head", metadata: site.metadata, title: page.title %}
</head>

<body class="{{ page.layout }} {{ page.page_class }}" data-controller="playthroughs"
      data-playthroughs-hide-class="hidden">
    <header class="bg-blue-700">
        <div class="max-w-7xl mx-auto px-2 sm:px-4 lg:divide-y lg:divide-gray-200 lg:px-8">
            {% render "main/navigation", metadata: site.metadata, page: page %}
            {% if page.header %}
                {% render "main/header" %}
            {% endif %}
        </div>
    </header>

    <main>
        {{ content }}
    </main>

    {% render "main/footer", metadata: site.metadata %}
</body>

</html>